{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "lib": ["ES2021", "ES2016", "DOM"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,        
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["dist", "node_modules","tests"]
}